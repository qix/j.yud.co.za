---
import VestaboardPost from '../../components/VestaboardPost.astro';
import Layout from '../../layouts/AppLayout.astro';

const { code } = Astro.params;

let title = 'Send a message to Josh';
if (code === 'snugglebutt') {
	title = 'Send sugarbutt a message';
}
---

<Layout title={title}>
	<VestaboardPost code={code} />
</Layout>
